{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "../../assets/js",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "./src/types/**/*.d.ts"]
}
